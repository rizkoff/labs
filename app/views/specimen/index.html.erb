<h1><%= t 'specimen.listing' %> (<%= @specimen.size %>)</h1>

<% form_tag specimen_path, :method => :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag (t "nav.Search"), :name => nil %>
<% end -%>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% tclass = nil %>
<% @specimen.each do |speciman| %>
  <% tclass = (speciman.priord == 0)? nil: " class='fz' " %>
  <tr <%= tclass %> >
    <td><%= link_to (speciman.title), edit_speciman_path(speciman) %></td>
    <td><%= link_to (t 'shipments.nav'), speciman_shipments_path(speciman) %></td>
    <td><%= link_to (t 'factors.title'), speciman_factors_path(speciman) %></td>
    <td><%= nil %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to (t 'specimen.nav-new'), new_speciman_path %>
